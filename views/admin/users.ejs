<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>CMS Admin Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>
    
    <%-include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%-include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>User's Management</h2>

                    <p><%=message%></p>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No.</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Creation Date</th>
                            <th>Role</th>
                            <th>User Status</th>
                            <th>Action</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.email%></td>
                                <td><%=result.mobile%></td>
                                <td><%=result.creationDate%></td>
                                <td><a href="/admin/roleupdate/<%=result.id%>"><button><%=result.role%></button></a></td>
                                <td><a href="/admin/userstatusupdate/<%=result.id%>"><button><%=result.status%></button></a></td>
                                <td><a href="/admin/userdelete/<%=result.id%>"><button>delete</button></a></td>
                            </tr>
                        <%})%>
                        

                    </table>

                </div>
            </div>
        </div>
    </section>

    <%-include('../../partials/admin/footer.ejs')%>
    


</body>
</html>